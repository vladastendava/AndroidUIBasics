<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BasicText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="BasicVerticalLinearLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/view_padding</item>
        <item name="android:background">@color/colorViewBackground</item>
    </style>

    <style name="Title" parent="@android:style/TextAppearance.DeviceDefault.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#0A0AFA</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="BodyText" parent="@android:style/TextAppearance.DeviceDefault.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FA0AFA</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#4A4A4A</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:typeface">monospace</item>
    </style>

</resources>
